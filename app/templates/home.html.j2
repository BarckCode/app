{% extends "layouts/base.html.j2" %}
{% block title %}Home{% endblock %}
{% block head %}
    {{ super() }}
    <link rel="stylesheet" href="static/css/templates/home.css" />
{% endblock %}
{% block main %}
<div class="portada">
    <figure class="portada_container_img">
        <img src="https://pbs.twimg.com/profile_images/1351987230659780609/ah4YrurI_400x400.jpg" class="portada_img_perfil" alt="Foto de perfil">
    </figure>
    <div class="portada_presentation">
        <h5 class="portada_presentation_title">
            {{ title }}
        </h5>
        <p class="portada_presentation_text">
            {{ presentation }}
        </p>
        <div>
            <h3>Salida de BBDD:</h3>
            {% for row in records_data %}
                <li>{{"ID = ", row[0]}}</li>
                <li>{{"POST_NAME = ", row[1]}}</li>
                <li>{{"CATEGORY = ", row[2]}}</li>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}